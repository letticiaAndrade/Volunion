@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3">
        <h2 class="text-center mb-3">Cadastrar</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Input.Nome" />
                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                <input class="form-control" asp-for="Input.Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Tipo de Usuário</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Input.TipoUsuario">
                        <option value="voluntario">Voluntário</option>
                        <option value="organizacao">Organização</option>
                    </select>
                    <span asp-validation-for="Input.TipoUsuario" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Descrição</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Input.Descricao" />
                    <span asp-validation-for="Input.Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Localização</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Input.Localizacao" />
                    <span asp-validation-for="Input.Localizacao" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefone</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Input.PhoneNumber" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Senha</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Confirmar Senha</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Input.ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <button class="btn btn-outline-primary" href="/" role="button">Cancelar</button>
                </div>
                </div>
        </form>
    </div>
    </div>
</div>
